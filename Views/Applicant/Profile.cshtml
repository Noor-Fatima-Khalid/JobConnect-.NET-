@model Applicant

@{
    Layout = "~/Views/Shared/Applicants/_ProfileLayout.cshtml";
}

<div class="row justify-content-center mt-4">
    <div class="card shadow-lg p-3" style="max-width: 900px;">
        <div class="card-body">
            <div class="row align-items-center">
                <!-- Profile Picture -->
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <img src="/images/pfp.png" alt="Profile Picture" class="img-fluid rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
                </div>

                <!-- Basic Info -->
                <div class="col-md-8">
                    <h3 class="card-title mb-1">@Model.Name</h3>
                    <p class="text-muted mb-0">
                        @(!string.IsNullOrEmpty(Model.TaglineSkills)
                          ? string.Join("|", Model.TaglineSkills.Split(','))
                              : "No tagline skills listed.")
                    </p>

                    <p class="text-muted">@Model.Location</p>
                    <a href="mailto:abc@gmail.com" class="btn btn-outline-primary rounded-pill px-4 mt-2">
                        Contact
                    </a>
                </div>
                <h6 class="mt-4">About</h6>
                <p>@Model.About</p>
                <hr />
                <div class="mt-3 mb-3">
                    <h6 class="text-decoration-none">Skills</h6>
                    @if (!string.IsNullOrWhiteSpace(Model.Skill))
                    {
                        foreach (var s in Model.Skill.Split(',', StringSplitOptions.RemoveEmptyEntries))
                        {
                            <span class="badge bg-secondary me-1">@s.Trim()</span>
                        }
                    }
                    else
                    {
                        <p>No skills listed.</p>
                    }
                </div>
                
                <hr/>

                <div class="mt-3">
                    <h6 class="text-decoration-none">Education</h6>
                    <p>@Model.Education</p>
                </div>

                <hr />

                @* <div class="mt-3">
                    <h6 class="text-decoration-none">Work Experience</h6>
                    @foreach (var exp in Model.Experience)
                    {
                        <div class="mb-2 d-flex justify-content-between">
                            <div>
                                <strong>@exp.Position</strong> - <em>@exp.Company</em>
                            </div>
                            <div>
                                <span class="text-muted">@exp.Duration</span>
                            </div>
                        </div>
                    }
                </div> *@
                @* <hr /> *@
                <div class="mt-3 mb-3">
                    <h6 class="text-decoration-none">Certifications</h6>
                    @if (!string.IsNullOrWhiteSpace(Model.Certifications))
                    {
                        foreach (var s in Model.Certifications.Split(',', StringSplitOptions.RemoveEmptyEntries))
                        {
                            <p me-1">@s.Trim()</p>
                        }
                    }
                    else
                    {
                        <p>No certifications listed.</p>
                    }
                </div>

            </div>
        </div>
    </div>
</div>