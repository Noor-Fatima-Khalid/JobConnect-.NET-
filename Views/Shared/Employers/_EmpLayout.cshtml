<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Job_Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Job_Portal.styles.css" asp-append-version="true" />
    @* BootStrap CSS *@
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    @* BootStrap JS *@
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    @* BootStrap Icons *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body class="bg-mybg">
    <header>
        @* desktop nav bar *@
        <nav class="navbar sticky-top navbar-expand-lg bg-white shadow-sm pt-2 d-none d-lg-flex">
            <div class="container">
                <a class="navbar-brand" href="/Employers/Dashboard">
                    <img src="/images/logo1.png" alt="logo" style="width: 80px; height: auto;">
                </a>

                <form class="d-flex search-bar ms-3">
                    <div class="input-group">
                        <input class="form-control" type="search" placeholder="Search" aria-label="Search">
                    </div>
                </form>

                <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item text-center ms-5">
                            <a href="~/Employers/Dashboard" class="nav-link fs-6">
                                <i class="bi bi-house-door-fill fs-4"></i><br>Home
                            </a>
                        </li>

                        <li class="nav-item text-center ms-5">
                            <a href="~/Employers/JobPost" class="nav-link fs-6">
                                <i class="bi bi-building fs-4"></i><br>Post a Job
                            </a>
                        </li>
                        <li class="nav-item text-center ms-5">
                            <a href="~/Employers/Applicants" class="nav-link fs-6">
                                <i class="bi bi-people-fill fs-4"></i><br>Applicants
                            </a>
                        </li>
                        <li class="nav-item text-center ms-5">
                            <a href="~/Employers/Profile" class="nav-link fs-6">
                                <i class="bi bi-person-circle fs-4"></i><br>Profile
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        @* mobile search bar *@
        <div class="d-block d-lg-none bg-white px-3 py-2 shadow-sm sticky-top">
            <input class="form-control" type="search" placeholder="Search..." />
        </div>

        @* mobile bottom nav *@
        <nav class="navbar d-flex d-lg-none fixed-bottom bg-white shadow-lg justify-content-around py-2">
            <a asp-controller="Employers" asp-action="Dashboard" class="text-center text-dark">
                <i class="bi bi-house-door-fill fs-4"></i><br><small>Home</small>
            </a>
            <a asp-controller="Employers" asp-action="JobPost" class="text-center text-dark">
                <i class="bi bi-building fs-4"></i><br><small>Post</small>
            </a>
            <a asp-controller="Employers" asp-action="Applicants" class="text-center text-dark">
                <i class="bi bi-people-fill fs-4"></i><br><small>Applicants</small>
            </a>
            <a asp-controller="Employers" asp-action="Profile" class="text-center text-dark">
                <i class="bi bi-person-circle fs-4"></i><br><small>Profile</small>
            </a>
        </nav>
    </header>
    @* body *@
    <div class="container-fluid mx-0 mx-sm-5">
        <div class="row mt-3">
            @* Sidebar *@
            @* <div class="col-lg-1 d-none d-lg-block bg-mybg" style="width:20px;"></div> *@
            <div class="col-md-2 col-lg-2">
                <div class="card shadow p-1 bg-white border h-100">
                    <section>
                    <div class="position-relative ps-4">
                        <img class="card-img-top" src="@Url.Content("~/images/i2c.png")" alt="Company logo" style="height: 70px; width: 80%;">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">i2c Inc.</h5>
                        <small class="text-muted">4,005 followers</small>

                        @* Buttons *@
                        <div class="mt-2">
                            <button class="btn btn-primary btn-sm w-50 rounded-3 fw-bold" onclick="showOverlay()">Create</button>
                        </div>

                        @* Sidebar Links *@
                        <hr>
                        <div class="list-group" id="sidebar-links">
                            @* Figure out later: How to use dynamic activity on sidebar items *@
                            <a asp-controller="Employers" asp-action="Dashboard" class="list-group-item list-group-item-action active">Dashboard</a>
                            <a asp-controller="Employers" asp-action="AllJobs" class="list-group-item list-group-item-action">Jobs</a>
                            @* <a href="~/Employers/Dashboard" class="list-group-item list-group-item-action">Analytics</a> *@
                            <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="modal" data-bs-target="#editModal">
                                Edit Page
                            </a>
                                <a class="nav-link text-dark d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                    Settings
                                </a>
                                <a class="nav-link text-dark d-flex align-items-center text-muted" asp-area="Identity" asp-page="/Account/Logout" title="Manage">
                                    <i class="bi bi-box-arrow-right fs-6 me-2"></i> Logout
                                </a>
                        </div>
                    </div>
                    </section>
                </div>
            </div>

            @* Main Content Section *@
            <div class="col-md-9 col-lg-9">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            @* <div class="col-lg-1 d-none d-lg-block bg-mybg"></div> *@
        </div>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2025 - JobConnect - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    @* the overlay modal of create button*@
    <div id="overlay">
        <div class="overlay-content">
            <div class="container">
                <div class="row align-items-center justify-content-between">
                    <div class="col">
                        <h5 class="fw-bold custom_color">Create</h5>
                    </div>
                    <div class="col-auto">
                        <button class="btn" onclick="hideOverlay()">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>
                </div>
                <hr class="mt-0" />
                <div class="row">
                    <div class="col mb-2 d-flex align-items-center">
                        <i class="bi bi-briefcase-fill me-2"></i>
                        <a href="~/Employers/JobPost" class="text-decoration-none fw-bold custom_color">Start a job post</a>
                    </div>
                </div>
                @* <div class="row">
                    <div class="col-12 d-flex align-items-center">
                        <i class="bi bi-people-fill me-2"></i>
                        <a href="#" class="text-decoration-none fw-bold custom_color">Schedule an online interview</a>
                    </div>
                </div> *@
            </div>
        </div>
    </div>


    <!-- Edit modal for edit page in side bar -->
    <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editModalLabel">Edit</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                </div>
                <div class="modal-body d-flex">
                    @* sidebar *@
                    <div class="sidebar-modal mb-2">
                        <h5>Edit</h5>
                        <hr class="text-secondary">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a href="#pageInfo" class="nav-link active" data-bs-toggle="tab">Page Info</a>
                            </li>
                            <li class="nav-item">
                                <a href="#details" class="nav-link" data-bs-toggle="tab">Details</a>
                            </li>
                            <li class="nav-item">
                                <a href="#locations" class="nav-link" data-bs-toggle="tab">Locations</a>
                            </li>
                        </ul>
                    </div>

                    @* main content *@
                    <div class="container-fluid">
                        <div class="tab-content content-area">
                            @* page info *@
                            <div class="tab-pane fade show active" id="pageInfo">
                                <h3>Page Info</h3>
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control">

                                <label class="form-label mt-3">Tagline</label>
                                <textarea class="form-control"></textarea>
                            </div>

                            @* details *@
                            <div class="tab-pane fade" id="details">
                                <h3>Details</h3>
                                <form action="" method="get">
                                    <label for="overview" class="form-label fw-normal">Overview</label>
                                    <textarea class="form-control  rounded-1" id="overview" rows="3"></textarea>
                                    <label for="industry" class="form-label fw-normal">Industry</label>
                                    <input type="text" class="form-control " id="industry" placeholder="Data Analysis">
                                    <label for="company-size" class="form-label fw-normal mt-3">Company size*</label>
                                    <select class="form-select  text-white" id="company-size">
                                        <option>1-10 employees</option>
                                        <option>11-50 employees</option>
                                        <option>51-200 employees</option>
                                        <option>201-500 employees</option>
                                        <option>500+ employees</option>
                                    </select>

                                    <label for="company-type" class="form-label fw-normal mt-3">Company type*</label>
                                    <select class="form-select text-black" id="company-type">
                                        <option>Private</option>
                                        <option>Public</option>
                                        <option>Educational</option>
                                        <option>Nonprofit</option>
                                        <option>Government</option>
                                    </select>

                                    <label for="phone" class="form-label fw-normal mt-3">Phone</label>
                                    <input type="tel" class="form-control" id="phone" placeholder="Enter a phone number">
            
                                    <label for="website" class="form-label fw-normal mt-3">Website</label>
                                    <input type="url" class="form-control" id="website" placeholder="www.abc.com">
                                </form>
                            </div>

                            @* Location *@
                            <div class="tab-pane fade" id="locations">
                                <h3>Locations</h3>
                                <p>Update locations to let the applicants know where you're based!</p>
                                <button class="btn btn-primary mb-3 rounded-3 btn-info"> + Add a location</button>
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">Address</th>
                                            <th scope="col">Location Name</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Lahore, PK</td>
                                            <td>Lahore</td>
                                            <td>
                                                <button class="btn btn-danger btn-sm">Delete</button>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                @* buttons *@
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save Changes</button>
                </div>
            </div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>