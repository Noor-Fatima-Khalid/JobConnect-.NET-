@model List<Job>

@{
    Layout = "~/Views/Shared/Employers/_EmpLayout.cshtml";
    ViewData["Title"] = "Job Statuses";
}

<div class="card shadow-sm p-3 border">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h5 class="fw-bold mb-0">Jobs</h5>
            <p class="text-muted mb-0">Manage your page's job posts.</p>
        </div>
        <button class="btn btn-outline-primary btn-sm border-1 rounded-4 fw-bold custom-bg">Post a job for free</button>
    </div>

    @* <div class="mt-3"> *@
    @*     <ul class="nav job-tabs" id="jobTabs"> *@
    @*         <li class="nav-item"> *@
    @*             <a href="#" class="nav-link active" data-tab="openJobs">Open</a> *@
    @*         </li> *@
    @*         <li class="nav-item"> *@
    @*             <a href="#" class="nav-link" data-tab="inReviewJobs">In review</a> *@
    @*         </li> *@
    @*         <li class="nav-item"> *@
    @*             <a href="#" class="nav-link" data-tab="closedJobs">Closed</a> *@
    @*         </li> *@
    @*     </ul> *@
    @* </div> *@
</div>

<div class="card shadow-sm p-4 mt-2 bg-white border text-center">
    @if (Model == null || !Model.Any())
    {
        <h4 class="custom_color mb-3">You haven't posted any jobs yet</h4>
        <div class="d-flex justify-content-center">
            <button class="btn btn-outline-primary btn-sm border-1 rounded-4 fw-bold px-4 custom-bg" style="max-width: 200px; width: 100%;">
                Post a job for free
            </button>
        </div>
    }
    else
    {
        @foreach (var j in Model)
        { 
            @* if() *@
        }
    }
</div>
